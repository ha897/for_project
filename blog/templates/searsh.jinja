{% extends "base.jinja" %}
{% block base %}
<style>
    .searsh-fpage {
        padding: 20px 40px;
        background-color: beige;
    }
</style>
<div class="searsh-fpage">

    <form class="d-flex" role="search" method="post" action="{{url_for('main_controller.searsh')}}">
        <input name="searsh" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
        <select name="selected" style="width:130px" class="form-select" aria-label="Default select example">
            <option selected>كتاب</option>
            <option>مقاله</option>
            <option>كتاب صوتي</option>
        </select>
        <button class="btn btn-outline-success" type="submit">بحث</button>


    </form>
</div>
{# عرض العناصر #}
{% if books %}
{% from "partials/_macros.jinja" import book_macro %}

{{ book_macro(books, pagination) }}
</div>


{% elif audioBooks %}
{% from "partials/_macros.jinja" import audio_book_macro %}

{{ audio_book_macro(audioBooks, pagination) }}


{% elif articles %}
<script src="{{url_for('static', filename='js/change-items.js')}}"></script>

{% from "partials/_macros.jinja" import articles_macro%}
<h1 class="article-page-title">اكادمية كتب</h1>
{{articles_macro(articles,true, pagination)}}
{% else %}
<h1 style="text-align: center;" class="no-artical">لا يوجد عناصر <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
            class="bi bi-emoji-frown" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
            <path
                d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.5 3.5 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.5 4.5 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683M7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5m4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5" />
        </svg></h1>
{% endif %}
{% endblock base %} 