{% with messages = get_flashed_messages(with_categories=true) %}
{% if messages %}
{% for category, message in messages %}
<div class="alert alert-{{category}}" id="alertBox{{loop.index}}" role="alert"
    style="text-align: center;margin:20px 20%;">
    {{message}} <svg xmlns="http://www.w3.org/2000/svg" id="close{{loop.index}}" width="16" height="16"
        fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
        <path
            d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
    </svg>
</div>
{% endfor %}
{% endif %}
{% endwith %}

<script>
    //لاخفاء النافذة
    let all_icon_close = document.querySelectorAll('[id^=close]')
    for (let i = 0; i < all_icon_close.length; i++) {
        all_icon_close[i].addEventListener("click", function () {
            document.getElementById("alertBox" + (i + 1)).style.display = 'none';
        });
    }
</script>