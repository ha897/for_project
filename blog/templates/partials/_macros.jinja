{# عرض المقالات #}
{% macro articles_macro(articles, pagination) %}
{% if articles %}
<div class="page-container">
    {% for article in articles %}
    <div class="card" style="width: 18rem;display:inline-block;">
        <img src="{{url_for('static',filename='image/article/'+article.artical_img)}}" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">{{article.title}}</h5>
            <div class="card-text" style="height: 80px;overflow:hidden;">{{article.content}}</div>
            <a href="{{url_for('article_controller.article', id = article.id)}}" id="buttom"
                class="btn btn-success">قرائة</a>
        </div>
    </div>
    {% endfor %}
</div>
{# التاكد من ان المقالات المرسله كلها ام لا ليضع زر اضهار المزيد #}
{% if pagination == none %}
<a id="buttom" style="display: block;width:fit-content;margin:auto;margin-top:20px;margin-bottom:20px;"
    class="btn btn-success" href="{{url_for('article_controller.articles')}}">عرض المزيد</a>

{% else %}
<div class="pagination">
    {{ pagination.links }}
</div>
{% endif %}

{% else %}
<h1 class="no-artical">لا يوجد مقالات <svg xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor"
        class="bi bi-emoji-frown" viewBox="0 0 16 16">
        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14m0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16" />
        <path
            d="M4.285 12.433a.5.5 0 0 0 .683-.183A3.5 3.5 0 0 1 8 10.5c1.295 0 2.426.703 3.032 1.75a.5.5 0 0 0 .866-.5A4.5 4.5 0 0 0 8 9.5a4.5 4.5 0 0 0-3.898 2.25.5.5 0 0 0 .183.683M7 6.5C7 7.328 6.552 8 6 8s-1-.672-1-1.5S5.448 5 6 5s1 .672 1 1.5m4 0c0 .828-.448 1.5-1 1.5s-1-.672-1-1.5S9.448 5 10 5s1 .672 1 1.5" />
    </svg></h1>
{% endif %}

{% endmacro %}

